<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dip" >

    <TextView
        android:id="@+id/map_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/map_arrow"
        android:ellipsize="end"
        android:focusable="false"
        android:singleLine="true"
        android:textStyle="bold"
        android:capitalize="characters"
        android:textColor="@color/date_color" />

    <TextView
        android:id="@+id/map_list_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/map_list_name"
        android:layout_toLeftOf="@+id/map_arrow"
        android:capitalize="sentences"
        android:ellipsize="end"
        android:focusable="false"
        android:textColor="@color/date_color" />

    <TextView
        android:id="@+id/map_list_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/map_list_desc"
        android:layout_toLeftOf="@+id/map_arrow"
        android:focusable="false"
        android:textColor="@color/date_color" />

    <TextView
        android:id="@+id/map_list_id"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/map_list_url"
        android:layout_toLeftOf="@+id/map_arrow"
        android:capitalize="sentences"
        android:focusable="false"
        android:singleLine="true"
        android:textColor="@color/date_color"
        android:visibility="gone" />

</RelativeLayout>