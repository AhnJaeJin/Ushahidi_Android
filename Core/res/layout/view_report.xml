<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/table_even_row_color"
    android:fillViewport="true" >

    <ViewAnimator
        android:id="@+id/view_report_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout style="@style/LinearLayout.Vertical" >

            <!-- Title starts -->

            <TextView
                android:id="@+id/report_title"
                style="@style/TextView.Label"
                android:text="@string/report_title" />

            <LinearLayout
                android:id="@+id/title_layout"
                style="@style/LinearLayout.Vertical"
                android:layout_below="@+id/report_title"
                android:background="@color/table_odd_row_color" >

                <TextView
                    android:id="@+id/title"
                    style="@style/TextView.Title" />
            </LinearLayout>
            <!-- Title ends -->


            <!-- Status starts -->

            <TextView
                android:id="@+id/report_status"
                style="@style/TextView.Label"
                android:layout_below="@+id/title_layout"
                android:text="@string/report_verified" />

            <LinearLayout
                style="@style/LinearLayout.Vertical"
                android:layout_below="@+id/report_status"
                android:background="@color/table_odd_row_color" >

                <TextView
                    android:id="@+id/status"
                    style="@style/TextView.Title" />
            </LinearLayout>
            <!-- Status ends -->


            <!-- Description starts -->

            <TextView
                android:id="@+id/report_description"
                style="@style/TextView.Label"
                android:layout_below="@+id/status"
                android:text="@string/report_desc" />

            <LinearLayout
                style="@style/LinearLayout.Vertical"
                android:layout_below="@+id/report_status"
                android:background="@color/table_odd_row_color" >

                <TextView
                    android:id="@+id/desc"
                    style="@style/TextView.Description"
                    android:layout_below="@+id/report_description" />
            </LinearLayout>
            <!-- Description ends -->


            <!-- Category starts -->

            <TextView
                android:id="@+id/report_category"
                style="@style/TextView.Label"
                android:layout_below="@+id/desc"
                android:text="@string/report_category" />

            <LinearLayout
                style="@style/LinearLayout.Vertical"
                android:layout_below="@+id/report_status"
                android:background="@color/table_odd_row_color" >

                <TextView
                    android:id="@+id/category"
                    style="@style/TextView.Title"
                    android:layout_below="@+id/report_category" />
            </LinearLayout>

            <!-- Category ends -->


            <!-- Date starts -->

            <TextView
                android:id="@+id/report_date"
                style="@style/TextView.Label"
                android:layout_below="@+id/category"
                android:text="@string/report_date" />

            <LinearLayout
                style="@style/LinearLayout.Vertical"
                android:layout_below="@+id/report_status"
                android:background="@color/table_odd_row_color" >

                <TextView
                    android:id="@+id/date"
                    style="@style/TextView.Title"
                    android:layout_below="@+id/report_date" />
            </LinearLayout>

            <!-- Date ends -->


            <!-- Location starts -->

            <TextView
                android:id="@+id/report_loc"
                style="@style/TextView.Label"
                android:layout_below="@+id/date"
                android:text="@string/report_location" />

            <LinearLayout
                style="@style/LinearLayout.Vertical"
                android:layout_below="@+id/report_status" >

                <TextView
                    android:id="@+id/location"
                    style="@style/TextView.Title"
                    android:layout_below="@+id/report_loc" />
            </LinearLayout>
            <!-- Location ends -->


            <!-- Map starts -->

            <LinearLayout
                android:id="@+id/top_items_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:background="@color/table_odd_row_color"
                android:orientation="vertical"
                android:padding="10dip" >

                <com.google.android.maps.MapView
                    android:id="@+id/loc_map"
                    android:layout_width="match_parent"
                    android:layout_height="300dip"
                    android:layout_below="@+id/location"
                    android:layout_gravity="center"
                    android:apiKey="@string/google_map_api_key"
                    android:clickable="true"
                    android:enabled="true"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Map ends -->


            <!-- Photo starts -->

            <TextView
                android:id="@+id/report_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_items_layout"
                android:padding="10dip"
                android:text="@string/photos"
                android:textColor="@color/title_color"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/list_photo_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report_photo"
                android:background="@color/table_odd_row_color"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/list_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@color/table_selected_row_color"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/empty_list_for_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="@string/no_photos"
                    android:textColor="@color/black_color" />
            </LinearLayout>

            <!-- Photo ends -->


            <!-- News starts -->

            <TextView
                android:id="@+id/report_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_photo_item"
                android:padding="10dip"
                android:text="@string/news"
                android:textColor="@color/title_color"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/list_news_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report_news"
                android:background="@color/table_odd_row_color"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/list_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@color/table_selected_row_color"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/empty_list_for_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="@string/no_news"
                    android:textColor="@color/black_color" />
            </LinearLayout>

            <!-- News ends -->


            <!-- Video starts -->

            <TextView
                android:id="@+id/report_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_news_item"
                android:padding="10dip"
                android:text="@string/video"
                android:textColor="@color/title_color"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report_video"
                android:background="@color/table_odd_row_color"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/list_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@color/table_selected_row_color"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/empty_list_for_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="@string/no_video"
                    android:textColor="@color/black_color" />
            </LinearLayout>
            <!-- Video ends -->
        </LinearLayout>
    </ViewAnimator>

</ScrollView>